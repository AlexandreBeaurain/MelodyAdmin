{% extends 'AdmingeneratorGeneratorBundle::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {% include 'AdmingeneratorFormExtensionsBundle::stylesheets.html.twig' %}
    {% if form is defined and form is not empty %}
        {{ form_css(form) }}
    {% endif %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% include 'AdmingeneratorFormExtensionsBundle::javascripts.html.twig' %}
    {% if form is defined and form is not empty %}
        {{ form_js(form) }}
    {% endif %}
{% endblock %}
{% block sidebar %}
<aside class="main-sidebar sidebar-offcanvas">
    <section class="sidebar">
    {% block sidebar_profile %}
        {% if app.user %}
            {% block sidebar_profile_authenticated %}
                {% include "AdmingeneratorGeneratorBundle:Sidebar:authenticated.html.twig" %}
            {% endblock sidebar_profile_authenticated %}
        {% else %}
            {% block sidebar_profile_not_authenticated %}
                {% include "AdmingeneratorGeneratorBundle:Sidebar:not_authenticated.html.twig" %}
            {% endblock sidebar_profile_not_authenticated %}
        {% endif %}
    {% endblock sidebar_profile %}
    {% block sidebar_menu %}
        {{ knp_menu_render('MelodyAdminBundle:Builder:sidebarMenu') }}
    {% endblock sidebar_menu %}
    </section>
</aside>
{% endblock sidebar %}